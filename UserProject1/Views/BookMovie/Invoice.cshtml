
@{
    ViewData["Title"] = "Invoice";
    Layout = null;
}

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="~/css/invoice.css" />
<script src="~/js/invoice.js"></script>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<div id="invoice">
    <div class="toolbar hidden-print">
        <div class="text-right">
            <button id="printInvoice" class="btn btn-info"><i class="fa fa-print"></i> Print</button>
            <button class="btn btn-info"><i class="fa fa-file-pdf-o"></i> Export as PDF</button>
        </div>
        <hr>
    </div>
    <div class="invoice overflow-auto">
        <div style="min-width: 600px">
            <header>
                <div class="row">
                    <div class="col">
                        <a target="_blank" href="https://lobianijs.com">
                            <img src="https://bareillytoday.com/wp-content/uploads/2017/10/Top-10-Indias-Best-Online-Movie-Ticket-Booking-Websites-730x410.png" data-holder-rendered="true" />
                        </a>
                    </div>
                    <div class="col company-details">
                        <h2 class="name">
                            <a target="_blank" href="https://lobianijs.com">
                                Sanya
                            </a>
                        </h2>
                        <div>sanyasingh097@gmail.com</div>
                    </div>
                </div>
            </header>
            <main>
                <div class="row contacts">
                    <div class="col invoice-to">
                        <div class="text-gray-light">INVOICE TO:</div>
                        <h2 class="to">Customer Name:@ViewBag.UserDetails.UserName</h2>
                        <div class="address">Customer Email:@ViewBag.UserDetails.Email</div>
                        <div class="email"> Contact Person:@ViewBag.UserDetails.ContactNo</div>
                    </div>
                    <div class="col invoice-details">
                        <h1 class="invoice-id">INVOICE</h1>
                        <div class="date">Date of Invoice: 01/10/2018</div>
                        <div class="date">Due Date: 30/10/2018</div>
                    </div>
                </div>
                <table border="0" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            @*<th>#</th>*@
                            <th class="text-left">DESCRIPTION</th>
                            <th class="text-right">Movie Price</th>
                            <th class="text-right">Quantity</th>
                            <th class="text-right">TOTAL</th>
                        </tr>



                        @foreach (var item in ViewBag.BookMovie)
                        {
                            <tr>
                                @*<td class="no">04</td>*@
                                @*<td>*</td>*@
                                <td class="text-left">
                                    <h3> @item.Movies.MovieName</h3>
                                </td>


                                <td class="qty"><h3>@item.Movies.MoviePrice</h3></td>
                                <td class="unit"><h3>@item.Quantity</h3></td>
                                <td class="total">@(item.Movies.MoviePrice * item.Quantity)</td>
                            </tr>
                        }



                        </tbody>
                    <tfoot>
                        @*<tr>
                                <td colspan="2"></td>
                                <td colspan="2">SUBTOTAL</td>
                                <td>$5,200.00</td>
                            </tr>
                            <tr>
                                <td colspan="2"></td>
                                <td colspan="2">TAX 25%</td>
                                <td>$1,300.00</td>
                            </tr>*@
                        <tr>
                            <td colspan="1"></td>
                            <td colspan="2">GRAND TOTAL</td>
                            <td>@ViewBag.total</td>
                        </tr>
                    </tfoot>
                </table>
                <br />
                <br />
                <div class="thanks">Thank you!</div>
                <div class="notices">
                    @*<div>NOTICE:</div>
                        <div class="notice">A finance charge of 1.5% will be made on unpaid balances after 30 days.</div>*@
                </div>
            </main>
           <a asp-controller="Home" asp-action="Index" class="btn btn-dark">Go Back</a>
        </div>
        <!--DO NOT DELETE THIS div. IT is responsible for showing footer always at the bottom-->
        <div></div>
    </div>
</div>
